<Window x:Class="Projekat.Views.CreateTask"
        x:Name="ZadatakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Projekat.ViewModels"
        xmlns:local="clr-namespace:Projekat.Views"
        mc:Ignorable="d"
        Title="Kreiranje zadatka" Height="350" Width="475" WindowStartupLocation="CenterOwner" >
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <viewModel:KreiranjeZadatkaViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="1" TextAlignment="Left" VerticalAlignment="Center"> Naziv zadatka</TextBlock>
            <TextBox  Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="3" Height="25" Text="{Binding Naziv}"  BorderBrush="Gray" BorderThickness="1" />
            <TextBlock Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" TextAlignment="Left" VerticalAlignment="Center"> Tip zadatka</TextBlock>
            <ComboBox Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Tipovi}"
                    SelectedValue="{Binding IzabranTip, Mode=TwoWay}"
                    IsEditable="False"
                    Width="160"/>
            <TextBlock Grid.Row="3" Grid.Column="1" TextAlignment="Left" VerticalAlignment="Center"> Opis</TextBlock>
            <TextBox  Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="7" Height="35" Text="{Binding Opis}" BorderBrush="Gray" BorderThickness="1"/>
            <Button Grid.Row="10" Grid.Column="7" Command="{Binding Path=DataContext.AddCommand,RelativeSource={RelativeSource AncestorType= {x:Type local:CreateTask}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"> Dodaj zadatak</Button>
        </Grid>
    </DockPanel>
</Window>
